<h1>Editing <profile>                                                                                                                                                                                                                                                       </profile></h1>
<%= form_for @user, :html => {:multipart => true} do |f| %>
    <div class="field">
      <%= f.label 'Firstname' %>
      <%= f.text_field :firstname %>
    </div>
    <div class="field">
      <%= f.label 'Lastname' %>
      <%= f.text_field :lastname %>
    </div>
    <div class="field">
      <%= f.label 'Gender' %>
      <%=f.select(:gender, options_for_select([['Male', "Male"], ['Female', "Female"]]))%>
    </div>
    <div class="field">
      <%= f.label 'Birthday' %>
      <%= f.date_select :birthday, :start_year =>  1920, :end_year => Date.today.year%>
    </div>
    <div class="field">
      <%= f.label 'About me' %>
      <%= f.text_area :extra, cols: 30, rows: 10 %>
    </div>
    <div class="field">
      <%= f.file_field :avatar %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>