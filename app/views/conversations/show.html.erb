<div class = "messages">
  <table class="m">
    <tbody>
    <% @messages.each do |message|%>
    <tr>
        <td class="message-text">
          <% if (message.sender_id != nil)%>
              <p style="font-weight: bold"><%= link_to User.find(id = message.sender_id).name,
                                                           User.find(id = message.sender_id), class: "btn-link"%></p>
          <%end%>
            <p class="content"><%= message.content %></p>
          <br>
          <br>
          <br>
          <br>
        </td>
        <td class="message-date">
           <p class="message-date"> <%= message.created_at.strftime("%T %F") %></p>
          <br>
          <br>
          <br>
          <br>
        </td>
        </tr>
    <%end%>
    </tbody>
  </table>
</div>
<%= form_for [current_user, @conversation, @message] do |f|%>
    <div class="field" style="padding-left: 10%">
      <%= f.label 'text' %><br>
      <%= f.text_area :content %>
    </div>
    <div class="field" style="padding-left: 10%">
      <%= f.hidden_field :sender_id, value: current_user.id %>
    </div>
    <div class="field" style="padding-left: 10%">
      <%= f.hidden_field :receiver_id, value: @conversation.partner_id %>
    </div>
    <div class="actions" style="padding-left: 10%">
      <%= f.submit %>
    </div>
<% end %>
