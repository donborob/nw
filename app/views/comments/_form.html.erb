<%= form_for [post, comment] do |f|%>
    <div class="field" style="padding-left: 10%">
      <%= f.label 'Comment' %><br>
      <%= f.text_area :content %>
      <%= f.hidden_field :user_id, value: current_user.id %>
    </div>
    <div class="actions" style="padding-left: 10%">
      <%= f.submit %>
    </div>
<% end %>